<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @material.title %>
</p>

<p>
  <b>Rating:</b>
  <%= ratings_for @material %>
</p>

<p>
  <b>Description:</b>
  <%= @material.description.html_safe %>
</p>

<p>
  <b>Image:</b>
  <%= image_tag @material.image.url(:medium) %>
</p>

<p>
  <b>Download:</b>
  <%= link_to File.basename(@material.blend.path), @material.blend.url %>
</p>

<%= link_to 'Edit', edit_material_path(@material) %> |
<%= link_to 'Back', materials_path %>
